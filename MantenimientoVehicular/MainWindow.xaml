<Window x:Class="MantenimientoVehicular.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MantenimientoVehicular"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="600">
    <Grid>

        <Menu>
            <MenuItem Header="File"/>
            <MenuItem Header="Registros">
                <MenuItem x:Name="RegistroUsuario" Header="Registrar Usuario" Click="RegistroUsuario_Click"></MenuItem>
                <MenuItem x:Name="RegistroCliente" Header="Registrar Cliente" Click="RegistroCliente_Click"></MenuItem>
                <MenuItem x:Name="RegistroVehiculo" Header="Registrar Vehiculo" Click="RegistroVehiculo_Click"></MenuItem>
                
            </MenuItem>
            <MenuItem Header="Consultas">
                <MenuItem x:Name="ConsultaUsuario" Header="Consultar Usuario" Click="ConsultaUsuario_Click"></MenuItem>
            </MenuItem>
            <MenuItem Header="Ayuda"/>
        </Menu>
        
        
        
    </Grid>
</Window>
