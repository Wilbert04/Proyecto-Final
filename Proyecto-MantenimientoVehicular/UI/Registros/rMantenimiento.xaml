<Window x:Class="Proyecto_MantenimientoVehicular.UI.Registros.rMantenimiento"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proyecto_MantenimientoVehicular.UI.Registros"
        mc:Ignorable="d"
        Title="rMantenimiento" Height="700" Width="850">
    <Grid>
        <Label Content="MantenimientoId" HorizontalAlignment="Left" Margin="17,28,0,0" VerticalAlignment="Top" FontFamily="Bell MT" FontWeight="Bold" FontSize="14"/>
        <Label Content="Fecha" HorizontalAlignment="Left" Margin="505,29,0,0" VerticalAlignment="Top" FontFamily="Bell MT" FontWeight="Bold" FontSize="14"/>
        <Label Content="Cliente" HorizontalAlignment="Left" Margin="133,95,0,0" VerticalAlignment="Top" FontFamily="Bell MT" FontWeight="Bold" FontSize="14"/>
        <Label Content="Proximo Mantenimiento" HorizontalAlignment="Left" Margin="277,515,0,0" VerticalAlignment="Top" FontFamily="Bell MT" FontSize="16" FontWeight="Bold" Foreground="#FFFF0404"/>
        <Label Content="Vehiculo" HorizontalAlignment="Left" Margin="323,95,0,0" VerticalAlignment="Top" FontFamily="Bell MT" FontWeight="Bold" FontSize="14"/>
        <Label Content="Articulo" HorizontalAlignment="Left" Margin="42,208,0,0" VerticalAlignment="Top" FontFamily="Bell MT" FontWeight="Bold" FontSize="14"/>
        <Label Content="Cantidad" HorizontalAlignment="Left" Margin="317,231,0,0" VerticalAlignment="Top" FontWeight="Bold" FontFamily="Bell MT" FontSize="14"/>
        <Label Content="Precio" HorizontalAlignment="Left" Margin="471,230,0,0" VerticalAlignment="Top" FontWeight="Bold" FontFamily="Bell MT" FontSize="14"/>
        <Label Content="Importe" HorizontalAlignment="Left" Margin="621,229,0,0" VerticalAlignment="Top" FontFamily="Bell MT" FontWeight="Bold" FontSize="14"/>


        <!--TextBox-->

        <TextBox x:Name="idTextBox1" HorizontalAlignment="Left" Margin="139,33,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="75"/>
        <DatePicker x:Name="fechaDatePicker" HorizontalAlignment="Left" Margin="561,31,0,0" VerticalAlignment="Top" Width="113"/>
        <ComboBox x:Name="clienteComboBox" HorizontalAlignment="Left" Margin="137,121,0,0" VerticalAlignment="Top" Width="149"
                  SelectedValue="{Binding ClienteId,Mode=TwoWay}">

        </ComboBox>

        <ComboBox x:Name="vehiculoComboBox" HorizontalAlignment="Left" Margin="327,121,0,0" VerticalAlignment="Top" Width="145"
                  SelectedValue="{Binding VehiculoId,Mode=TwoWay}">
        </ComboBox>

        <DatePicker x:Name="proxmantDatePicker"   HorizontalAlignment="Left" Margin="461,517,0,0" VerticalAlignment="Top" Width="104">
            <DatePicker.SelectedDate>
                <Binding Path="ProximoMantemiento" UpdateSourceTrigger="PropertyChanged" Mode="TwoWay">
                    <Binding.ValidationRules>
                        <ExceptionValidationRule/>
                    </Binding.ValidationRules>
                </Binding>
            </DatePicker.SelectedDate>
        </DatePicker>
        <ComboBox x:Name="articuloComboBox" HorizontalAlignment="Left" Margin="46,233,0,0" VerticalAlignment="Top" Width="146" SelectionChanged="articuloComboBox_SelectionChanged"
                  />

        <TextBox x:Name="cantidadTextBox" HorizontalAlignment="Left" Margin="387,235,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="72" TextChanged="cantidadTextBox_TextChanged"/>
        <TextBox x:Name="precioTextBox" HorizontalAlignment="Left" Margin="524,234,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="87"/>
        <TextBox x:Name="importeTextBox1" HorizontalAlignment="Left" Margin="686,235,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="75"/>

        <DataGrid x:Name="detalleDataGrid" Margin="41,261,39,196">
            <DataGrid.ItemsSource>
                <Binding Path="DMantenimiento" UpdateSourceTrigger="PropertyChanged" Mode="TwoWay"/>
            </DataGrid.ItemsSource>
        </DataGrid>
        <Button x:Name="buscarButton" Content="Buscar" HorizontalAlignment="Left" Margin="225,25,0,0" VerticalAlignment="Top" Height="37" Width="105" Click="buscarButton_Click"/>
        <Button x:Name="agregararticuloButton" Content="+" HorizontalAlignment="Left" Margin="194,233,0,0" VerticalAlignment="Top" Height="21" Width="20" FontWeight="Bold"/>
        <Button x:Name="agregarButton" Content="+" HorizontalAlignment="Left" Margin="773,223,0,0" VerticalAlignment="Top" Width="36" Height="36" FontSize="18" FontWeight="Bold" Click="agregarButton_Click"/>
        <Label Content="Subtotal" HorizontalAlignment="Left" Margin="673,489,0,0" VerticalAlignment="Top" FontFamily="Bell MT" FontWeight="Bold" FontSize="14"/>
        <Label Content="ITEBIS" HorizontalAlignment="Left" Margin="682,511,0,0" VerticalAlignment="Top" FontFamily="Bell MT" FontWeight="Bold" FontSize="14"/>
        <Label Content="Total" HorizontalAlignment="Left" Margin="688,533,0,0" VerticalAlignment="Top" FontFamily="Bell MT" FontWeight="Bold" FontSize="14"/>
        <Button x:Name="removerButton" Content="Remover" HorizontalAlignment="Left" Margin="41,490,0,0" VerticalAlignment="Top" Height="27" Width="86" Click="removerButton_Click"/>
        <TextBox x:Name="subtotalTextBox" HorizontalAlignment="Left" Margin="739,493,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="71">
            <TextBox.Text>
                <Binding Path="Subtotal" UpdateSourceTrigger="PropertyChanged" Mode="TwoWay">
                    <Binding.ValidationRules>
                        <ExceptionValidationRule/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox.Text>
        </TextBox>
        <TextBox x:Name="itebisTextBox" HorizontalAlignment="Left" Margin="738,515,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="72">
            <TextBox.Text>
                <Binding Path="Itebis" UpdateSourceTrigger="PropertyChanged" Mode="TwoWay">
                    <Binding.ValidationRules>
                        <ExceptionValidationRule/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox.Text>
        </TextBox>
        <TextBox x:Name="totalTextBox" HorizontalAlignment="Left" Margin="738,537,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="71">
            <TextBox.Text>
                <Binding Path="Total" UpdateSourceTrigger="PropertyChanged" Mode="TwoWay">
                    <Binding.ValidationRules>
                        <ExceptionValidationRule/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox.Text>
        </TextBox>
        <Button x:Name="nuevoButton" Content="Nuevo" HorizontalAlignment="Left" Margin="200,618,0,0" VerticalAlignment="Top" Height="46" Width="114" Click="nuevoButton_Click"/>
        <Button x:Name="eliminarButton" Content="Eliminar" HorizontalAlignment="Left" Margin="517,620,0,0" VerticalAlignment="Top" Height="48" Width="127" Click="eliminarButton_Click"/>
        <Label Content="Descripcion" HorizontalAlignment="Left" Margin="252,172,0,0" VerticalAlignment="Top" FontFamily="Bell MT" FontWeight="Bold" FontSize="14"/>
        <TextBox x:Name="descripcionTextBox" HorizontalAlignment="Left" Margin="343,176,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="221">
            <TextBox.Text>
                <Binding Path="Descripcion" UpdateSourceTrigger="PropertyChanged" Mode="TwoWay">
                    <Binding.ValidationRules>
                        <ExceptionValidationRule/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox.Text>
        </TextBox>
        <Button x:Name="guardarButton" Content="Guardar" HorizontalAlignment="Left" Margin="366,621,0,0" VerticalAlignment="Top" Height="43" Width="122" Click="guardarButton_Click"/>
        <Label Content="Disp." HorizontalAlignment="Left" Margin="225,231,0,0" VerticalAlignment="Top" FontWeight="Bold" FontFamily="Bell MT" FontSize="14"/>
        <TextBox x:Name="disponibleTextBox" HorizontalAlignment="Left" Margin="269,235,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="37"/>
        <Label Content="Servicios" HorizontalAlignment="Left" Margin="513,94,0,0" VerticalAlignment="Top" FontWeight="Bold" FontFamily="Bell MT" FontSize="14" Height="29" Width="70"/>
        <ComboBox x:Name="serviciosComboBox" HorizontalAlignment="Left" Margin="517,121,0,0" VerticalAlignment="Top" Width="147"/>
    </Grid>
</Window>
