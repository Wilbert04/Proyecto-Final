<Window x:Class="Proyecto_MantenimientoVehicular.UI.Registros.rProveedores"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proyecto_MantenimientoVehicular.UI.Registros"
        mc:Ignorable="d"
        Title="Registro Proveedores" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Margin="0,0,0,5">
            <Label Content="Id" HorizontalAlignment="Left" Margin="40,40,-40,0" FontSize="14"/>
            <TextBox  TextWrapping="Wrap" Width="164" HorizontalAlignment="Left" Margin="100,-30,0,0" Height="21"/>
            <Label Content="Nombre" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="40,25,0,0" FontSize="14"/>
            <TextBox  TextWrapping="Wrap" Width="214" HorizontalAlignment="Left" Margin="110,-25,0,0" VerticalAlignment="Top" Height="21"/>
            <Label Content="Telefono" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="40,10,0,0" FontSize="14"/>
            <TextBox  TextWrapping="Wrap" Width="214" HorizontalAlignment="Left" Margin="110,-30,0,0" Height="21"/>
            <Label Content="Provincia" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="40,10,0,0" FontSize="14"/>
            <TextBox  TextWrapping="Wrap" Width="214" HorizontalAlignment="Left" Margin="110,-25,0,0" Height="21"/>
            <Label Content="Calle" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,-30,40,0" FontSize="14"/>
            <TextBox  TextWrapping="Wrap" Width="214" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="250,-26,0,0" Height="21"/>
            <Label Content="Cuidad" HorizontalAlignment="Center" Margin="0,-100,40,0" VerticalAlignment="Center" FontSize="14"/>
            <TextBox  TextWrapping="Wrap" Width="214" HorizontalAlignment="Center" Margin="250,-57,0,0" VerticalAlignment="Top" Height="21"/>
            <Button Content="Buscar" HorizontalAlignment="Center" Margin="-100,-150,0,0" VerticalAlignment="Top" Width="60" Height="25"/>
            <Label Content="Fecha" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,-100,40,0" FontSize="14"/>
            <DatePicker HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,-100,-180,0"/>
        </StackPanel>
        <StackPanel Margin="0,217,0,61" Grid.RowSpan="2">
            <Button Content="Nuevo" HorizontalAlignment="Left" Margin="70,50,0,0" VerticalAlignment="Top" Width="80" Height="30"/>
            <Button Content="Guardar" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="-70,-30,0,0" Height="30" Width="80"/>
            <Button Content="Eliminar" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-30,150,0" Height="30" Width="80"/>
        </StackPanel>

    </Grid>
</Window>
