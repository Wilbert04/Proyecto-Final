<Window x:Class="Proyecto_MantenimientoVehicular.UI.Registros.rVehiculo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proyecto_MantenimientoVehicular.UI.Registros"
        mc:Ignorable="d"
        Title="rVehiculo" Height="395" Width="600">
    <Grid>
        <Label Content="VehiculoId" HorizontalAlignment="Left" Margin="34,34,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="idTextBox" HorizontalAlignment="Left" Margin="108,40,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="93">
            <TextBox.Text>
                <Binding Path="VehiculoId" UpdateSourceTrigger="PropertyChanged" Mode="TwoWay">
                    <Binding.ValidationRules>
                        <ExceptionValidationRule/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox.Text>
        </TextBox>


        <Button x:Name="buscarButton" Content="Buscar" HorizontalAlignment="Left" Margin="226,31,0,0" VerticalAlignment="Top" Height="39" Width="108" Click="buscarButton_Click">
            
        </Button>
        <Label Content="Fecha" HorizontalAlignment="Left" Margin="350,36,0,0" VerticalAlignment="Top"/>
        <DatePicker x:Name="fechaDatePicker" HorizontalAlignment="Left" Margin="396,38,0,0" VerticalAlignment="Top" Width="98">
            <DatePicker.SelectedDate>
                <Binding Path="Fecha" UpdateSourceTrigger="PropertyChanged" Mode="TwoWay">
                    <Binding.ValidationRules>
                        <ExceptionValidationRule/>
                    </Binding.ValidationRules>
                </Binding>
            </DatePicker.SelectedDate>
        </DatePicker>

        <Label Content="Cliente" HorizontalAlignment="Left" Margin="30,102,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="clienteComboBox" HorizontalAlignment="Left" Margin="110,104,0,0" VerticalAlignment="Top" Width="126"
                  SelectedValue="{Binding Path=Cliente,Mode=TwoWay}">
            <!--<ComboBoxItem>Leo</ComboBoxItem>
            <ComboBoxItem>Ericsson</ComboBoxItem>-->
            
        </ComboBox>

        <Label Content="Tipo de Vehiculo" HorizontalAlignment="Left" Margin="322,158,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="tipovehiculoComboBox" HorizontalAlignment="Left" Margin="426,161,0,0" VerticalAlignment="Top" Width="120"
                  SelectedValue="{Binding TipoVehiculo, Mode=TwoWay}">
            <!--<ComboBoxItem>Carro</ComboBoxItem>
            <ComboBoxItem>Camionetas</ComboBoxItem>
            <ComboBoxItem>Jeepetas</ComboBoxItem>
            <ComboBoxItem>Motores</ComboBoxItem>
            <ComboBoxItem>Camiones</ComboBoxItem>-->
            
            


        </ComboBox>
        <Label Content="Descripcion" HorizontalAlignment="Left" Margin="28,158,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="descripcionTextBox" HorizontalAlignment="Left" Margin="111,163,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200">
            <TextBox.Text>
                <Binding Path="Descripcion" UpdateSourceTrigger="PropertyChanged" Mode="TwoWay">
                    <Binding.ValidationRules>
                        <ExceptionValidationRule/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox.Text>
        </TextBox>
        <Label Content="Placa" HorizontalAlignment="Left" Margin="30,187,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="placaTextBox" HorizontalAlignment="Left" Margin="112,192,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="197">
            <TextBox.Text>
                <Binding Path="Placa" UpdateSourceTrigger="PropertyChanged" Mode="TwoWay">
                    <Binding.ValidationRules>
                        <ExceptionValidationRule/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox.Text>
        </TextBox>
        <Label Content="Año" HorizontalAlignment="Left" Margin="32,215,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="añoTextBox" HorizontalAlignment="Left" Margin="113,221,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100">
            <TextBox.Text>
                <Binding Path="Año" UpdateSourceTrigger="PropertyChanged" Mode="TwoWay">
                    <Binding.ValidationRules>
                        <ExceptionValidationRule/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox.Text>
        </TextBox>
        <Button x:Name="nuevoButton" Content="Nuevo" HorizontalAlignment="Left" Margin="52,295,0,0" VerticalAlignment="Top" Height="49" Width="135" Click="nuevoButton_Click">
           
        </Button>
        <Button x:Name="guardarButton" Content="Guardar" HorizontalAlignment="Left" Margin="221,293,0,0" VerticalAlignment="Top" Height="50" Width="137" Click="guardarButton_Click">
            
        </Button>
        <Button x:Name="eliminarButton" Content="Eliminar" HorizontalAlignment="Left" Margin="399,292,0,0" VerticalAlignment="Top" Height="50" Width="119" Click="eliminarButton_Click">
          
        </Button>



    </Grid>
</Window>
